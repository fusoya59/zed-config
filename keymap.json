// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  // workspace
  {
    "context": "Workspace",
    "bindings": {}
  },
  {
    "context": "(vim_mode == normal || !Editor || EmptyPane)",
    "bindings": {
      "ctrl-right": "workspace::ActivatePaneRight",
      "ctrl-left": "workspace::ActivatePaneLeft",
      "ctrl-down": "workspace::ActivatePaneDown",
      "ctrl-up": "workspace::ActivatePaneUp",
      "ctrl-n": "workspace::ToggleLeftDock",
      "ctrl-shift-d": "workspace::ToggleBottomDock"
    }
  },

  // editor
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "ctrl-u": ["workspace::SendKeystrokes", "ctrl-u z z"],
      "ctrl-d": ["workspace::SendKeystrokes", "ctrl-d z z"],
      "space x": "pane::CloseActiveItem",
      "space shift-x": [
        "pane::CloseOtherItems",
        {
          "close_pinned": false
        }
      ],
      "space a": "workspace::ToggleRightDock",
      "space f f": "file_finder::Toggle",
      "space z": "workspace::CloseAllDocks",
      "space `": "workspace::NewCenterTerminal",
      "ctrl-\\": "project_panel::ToggleFocus",
      "space f g": [
        "task::Spawn",
        { "task_name": "tv text search", "reveal_target": "center" }
      ],
      "space l g": [
        "task::Spawn",
        { "task_name": "Open lazygit", "reveal_target": "center" }
      ],
      "space k 9": [
        "task::Spawn",
        { "task_name": "open k9s", "reveal_target": "center" }
      ]
    }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "p": [
        "vim::Paste",
        {
          "preserve_clipboard": true
        }
      ]
    }
  },

  // debug panel
  {
    "context": "DebugPanel",
    "bindings": {
      "ctrl-shift-d": "workspace::ToggleBottomDock"
    }
  },

  // project panel
  {
    "context": "(ProjectPanel && not_editing)",
    "bindings": {
      "space": "project_panel::OpenPermanent",
      "ctrl-n": "workspace::ToggleLeftDock",
      "a": "project_panel::NewFile",
      "d": "project_panel::Delete",
      "r": "project_panel::Rename"
    }
  },

  // terminal
  {
    "context": "Terminal && vi_mode",
    "bindings": {
      "space x": "pane::CloseActiveItem",
      "space f f": "file_finder::Toggle"
    }
  },

  // debugging
  {
    "context": "Editor",
    "bindings": {
      "f6": "debugger::Stop",
      "f10": "debugger::StepOver",
      "f11": "debugger::StepInto"
    }
  },

  // left dock nav
  {
    "context": "ProjectPanel",
    "bindings": {
      "]": "git_panel::ToggleFocus",
      "[": "outline_panel::ToggleFocus"
    }
  },
  {
    "context": "GitPanel",
    "bindings": {
      "]": "outline_panel::ToggleFocus",
      "[": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "OutlinePanel",
    "bindings": {
      "]": "project_panel::ToggleFocus",
      "[": "git_panel::ToggleFocus"
    }
  }
]
